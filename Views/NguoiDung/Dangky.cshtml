@model WebBanBanh.Models.DangKyModel

@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}

<style>
    table, th, td {
        border: 1px solid black;
    }
</style>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8" @ViewBag.thongbao style="border:1px double #222; border-radius:5px;background-color:#ffffff">
        @using (Html.BeginForm("DangKy", "NguoiDung", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group" style="margin-top:10px">
                <h3 style="text-align:center; color:black;margin-top:20px">ĐĂNG KÝ TÀI KHOẢN</h3>
                <div style="margin-left:25%; width:100%">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <b>   <label style="margin-left:25%">Nhập họ tên:</label></b>
                    <div style="margin-left:25%; width:60%">
                        @Html.EditorFor(model => model.HoTenKH, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HoTenKH, "", new { @class = "text-danger" })
                    </div>
                </div>
                <b> <label style="margin-left:25%">Nhập tài khoản:</label></b>
                <div style="margin-left:25%; width:60%">
                    @Html.EditorFor(model => model.TaiKhoanKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TaiKhoanKH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <b>   <label style="margin-left:25%">Nhập mật khẩu:</label></b>
                <div style="margin-left:25%; width:60%">
                    @Html.EditorFor(model => model.MatKhauKH, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.MatKhauKH, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <b>   <label style="margin-left:25%">Nhập lại mật khẩu:</label></b>
                <div style="margin-left:25%; width:60%">
                    @Html.EditorFor(model => model.MatKhauNhapLai, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.MatKhauNhapLai, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <b>   <label style="margin-left:25%">Nhập CMND:</label></b>
                <div style="margin-left:25%; width:60%">
                    @Html.EditorFor(model => model.CMND, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <b>   <label style="margin-left:25%">Nhập Email:</label></b>
                <div style="margin-left:25%; width:60%">
                    @Html.EditorFor(model => model.EmailKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmailKH, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <b>   <label style="margin-left:25%">Nhập địa chỉ:</label></b>
                <div style="margin-left:25%; width:60%">
                    @Html.EditorFor(model => model.DiaChiKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChiKH, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <b>   <label style="margin-left:25%">Nhập số điện thoại:</label></b>
                <div style="margin-left:25%; width:60%">
                    @Html.EditorFor(model => model.DienThoaiKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DienThoaiKH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                <b> <label style="margin-left:25%; width:60%">Nhập ngày sinh: (16 tuổi trở lên)</label></b>
                <div style="margin-left:25%; width:60%">
                    @Html.EditorFor(model => model.NgaySinhKH, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.NgaySinhKH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div style="margin-left:25%" class="form-group">
                <input type="submit" class="btn btn-default" value="Đăng ký" style=" margin-left:25%">
            </div>
        }
    </div>

    <div class="col-md-2"></div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<script>
    $("#NgaySinhKH").datepicker({
        dateFormat: "dd/mm/yy",
        changeMonth: true,
        changeYear: true,
        maxDate: "-16y"
    }).datepicker("setDate", new Date());
</script>
