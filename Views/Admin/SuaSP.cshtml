@model WebBanBanh.Models.SANPHAM

@{
    ViewBag.Title = "SuaSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 style="text-align: center; font-weight:bold">ĐIỀU CHỈNH THÔNG TIN SẢN PHẨM</h3>
<style>
    .my-button {
        width: 150px;
        margin-right: 10px;
    }
</style>
@using (Html.BeginForm("SuaSP", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaSP)

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Mã sản phẩm:</label>
            <div class="col-md-10">
                <div style="font:18px; padding: 5px 0 0 5px">@Model.MaSP</div>
            </div>

        </div>
        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Tên sản phẩm:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Giá bán:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Mô tả:</label>
            <div class="col-md-10">
                <textarea name="MoTa">@Model.MoTa</textarea>
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Ảnh bìa:</label>
            <div class="col-md-10">
                <input type="file" name="fileUpload" />
                <img src="@Url.Content("~/HinhSanPham/" + Model.AnhBia)" width="120px" />
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Ngày cập nhật:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayCapNhat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayCapNhat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Số lượng tồn:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Phần trăm KM:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PhanTramKM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhanTramKM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Mã nhà sản xuất:</label>
            <div class="col-md-10">
                @Html.DropDownList("MaNSX")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaLoaiSP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaLoaiSP")
            </div>
        </div>
        @*<div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Thanh toán trực tuyến:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ThanhToanTrucTuyen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ThanhToanTrucTuyen, "", new { @class = "text-danger" })
            </div>
        </div>*@
        @*<div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>*@
        <div class="row">
            <div class="col-lg-offset-3 col-lg-9">
                <button class="btn btn-info my-button" type="submit">
                    <span class="icon_floppy_alt"></span>
                    Lưu
                </button>
                <a class="btn btn-warning my-button" href="/Admin/SanPham">
                    <span class="glyphicon glyphicon-arrow-left">
                        Trở về
                    </span>
                </a>
            </div>
        </div>
    </div>
}

