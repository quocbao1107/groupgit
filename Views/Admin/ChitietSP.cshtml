@model WebBanBanh.Models.SANPHAM

@{
    ViewBag.Title = "ChitietSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    label {
        font-weight: bold;
    }

    .panel-heading {
        font-size: 16px;
    }

    .row {
        margin-bottom: 15px;
    }

    .my-button {
        width: 150px;
        margin-right: 10px;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> QUẢN LÝ SẢN PHẨM</h3>
    </div>
</div>
<div class="col-lg-12">
    <section class="panel panel-info">
        <header class="panel-heading">THÔNG TIN CHI TIẾT SẢN PHẨM</header>
        <div class="panel-body form-horizontal">
            <div class="row form-group">
                <div class="col-lg-4">
                    <h4>Thông tin cơ bản</h4>
                </div>
                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-lg-6">
                            <label>Mã sản phẩm</label>
                            <div>
                                @Model.MaSP
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label>Tên sản phẩm</label>
                            <div>
                                @Html.DisplayFor(model => model.TenSP)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <label>Nhà sản xuất</label>
                            <div>
                                @Html.DisplayFor(model => model.NHASANXUAT.TenNSX)
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label>Loại sản phẩm</label>
                            <div>
                                @Html.DisplayFor(model => model.LOAISP.TenLoaiSP)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <label>Giá bán</label>
                            <div>
                                @String.Format("{0:0,0}", Model.GiaBan) VNĐ
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label>Số lượng tồn</label>
                            <div>
                                @Html.DisplayFor(model => model.SoLuongTon)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <label>Khuyến mãi</label>
                            <div>
                                @Html.DisplayFor(model => model.PhanTramKM)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-lg-4">
                    <h4>Thông tin mô tả chi tiết</h4>
                </div>
                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-lg-12">
                            <label>Ảnh bìa</label>
                            <div>
                                <img src="@Url.Content("~/HinhSanPham/" + Model.AnhBia)" width="120" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <label>Mô tả</label>
                            <div style="border: 1px solid gray; padding: 10px">
                                @Html.Raw(Model.MoTa)
                            </div>
                        </div>
                    </div>
                    @*<div class="row">
                        <div class="col-lg-12">
                            <label>Thanh toán trực tuyến</label>
                            <div>
                                @Html.DisplayFor(model => model.ThanhToanTrucTuyen)
                            </div>
                        </div>
                    </div>*@
                </div>
            </div>
        </div>
    </section>
</div>
<div class="row">
    <div class="col-lg-offset-3 col-lg-9">
        <button class="btn btn-info my-button" type="submit">
            <span class="icon_floppy_alt"></span>
            Lưu
        </button>
        <a class="btn btn-warning my-button" href="/Admin/SanPham">
            <span class="glyphicon glyphicon-arrow-left">
                Trở về
            </span>
        </a>
    </div>
</div>
