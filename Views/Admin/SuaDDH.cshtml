@model WebBanBanh.Models.DONDATHANG

@{
    ViewBag.Title = "SuaDDH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .my-button {
        width: 150px;
        margin-left: 10px;
    }
</style>
<h2 style="font-weight: bold; text-align: center;">CHỈNH SỬA ĐƠN ĐẶT HÀNG</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDDH)
        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Mã đơn đặt hàng:</label>
            <div class="col-md-10">
                <div style="font:18px; padding: 5px 0 0 5px">@Model.MaDDH</div>
            </div>
        </div>
        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Ngày đặt:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayDat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayDat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Tình trạng giao hàng:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TinhTrangGiaoHang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TinhTrangGiaoHang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Tên người nhận:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNguoiNhan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNguoiNhan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Số điện thoại người nhận:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SdtNguoiNhan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SdtNguoiNhan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Địa chỉ giao hàng:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DCGiaoHang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DCGiaoHang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Ngày giao:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayGiao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayGiao, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-lg-offset-3 col-lg-9">
                <button class="btn btn-info my-button" type="submit">
                    <span class="icon_floppy_alt"></span>
                    Lưu
                </button>
                <a class="btn btn-warning my-button" href="/Admin/DonDatHang">
                    <span class="glyphicon glyphicon-arrow-left">
                        Trở về
                    </span>
                </a>
            </div>
        </div>
    </div>
}
