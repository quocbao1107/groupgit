@model WebBanBanh.Models.SANPHAM

@{
    ViewBag.Title = "ThemmoiSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 style="text-align: center; font-weight:bold">THÊM MỚI SẢN PHẨM</h3>
@using (Html.BeginForm("ThemmoiSP", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Tên sản phẩm:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control", @required = "Bạn phải nhập tên sàn phẩm" } })
                @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Giá bán:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control", @required = "Bạn phải nhập giá sản ph" } })
                @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Mô tả:</label>
            <div class="col-md-10">
                <textarea name="MoTa">Mô tả thông tin sản phẩm</textarea>
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Ảnh bìa:</label>
            <div class="col-md-10">
                <input type="file" name="fileupload" />
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Ngày cập nhật:</label>
            <div class="col-md-10">
                <input class="form-control" value="@DateTime.Now" />
                @Html.ValidationMessageFor(model => model.NgayCapNhat)
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Số lượng tồn:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control", @min = '0' } })
                @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Phần trăm KM:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PhanTramKM, new { htmlAttributes = new { @class = "form-control", @min = '0' } })
                @Html.ValidationMessageFor(model => model.PhanTramKM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Mã nhà sản xuất:</label>
            <div class="col-md-10">
                @Html.DropDownList("MaNSX")
            </div>
        </div>

        <div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Mã loại sản phẩm:</label>
            <div class="col-md-10">
                @Html.DropDownList("MaLoaiSP")
            </div>
        </div>
        @*<div class="form-group">
            <label style="font-weight:bold" class="control-label col-md-2">Thanh toán trực tuyến:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ThanhToanTrucTuyen, new { htmlAttributes = new { @class = "form-control", @min = '0' } })
                @Html.ValidationMessageFor(model => model.ThanhToanTrucTuyen, "", new { @class = "text-danger" })
            </div>
        </div>*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ SẢN PHẨM", "SanPham")
</div>
