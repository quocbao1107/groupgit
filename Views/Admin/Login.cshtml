@model WebBanBanh.Models.DangNhapAdminP

@{
    ViewBag.Title = "Login";
}

@{
    Layout = null;
}
<style>
    .top-content {
        background-image: url('../../images/1235.jpg');
    }
</style>
<!DOCTYPE html>
<link href="~/Content/assets/css/form-elements.css" rel="stylesheet" />
<link href="~/Content/assets/css/style.css" rel="stylesheet" />
<script src="~/Content/assets/js/scripts.js"></script>
<script src="~/Content/assets/js/placeholder.js"></script>
<script src="~/Content/assets/js/jquery.backstretch.js"></script>
<script src="~/Content/assets/js/jquery-1.11.1.js"></script>
<script src="~/Content/assets/js/jquery-1.11.1.min.js"></script>
<script src="~/Content/assets/js/jquery.backstretch.min.js"></script>
<link href="~/Content/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/assets/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="~/Content/assets/bootstrap/css/bootstrap-theme.min.css" rel="stylesheet" />
<link href="~/Content/assets/bootstrap/css/bootstrap-theme.css" rel="stylesheet" />
<a href="~/Content/assets/bootstrap/css/bootstrap.css.map"> </a>
<script src="~/Content/assets/bootstrap/js/bootstrap.js"></script>
<script src="~/Content/assets/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Content/assets/bootstrap/js/npm.js"></script>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body style="background-image: url('../../images/3@2x.jpg'); ">
    <div class="top-content">

        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    @*<div class="col-sm-8 col-sm-offset-2 text">
                            <h1><strong>Bootstrap</strong> Login Form</h1>
                            <div class="description">
                                <p>
                                    This is a free responsive login form made with Bootstrap.
                                    Download it on <a href="http://azmind.com"><strong>AZMIND</strong></a>, customize and use it as you like!
                                </p>
                            </div>
                        </div>*@
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 form-box">
                        <div class="form-top">
                            <div class="form-top-left" style="text-align:center">
                                <h3>ĐĂNG NHẬP HỆ THỐNG QUẢN TRỊ</h3>
                                <h4 style="color:red; margin-left:80px;">@ViewBag.Thongbao</h4>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-key"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
                            {
                                @Html.ValidationSummary(true)
                                <div class="form-group">
                                    <label class="sr-only" for="form-username">Username:</label>
                                    <div>
                                        @Html.EditorFor(model => model.UserAdmin, new { htmlAttributes = new { @class = "form-username form-control", @placeholder = "Nhập tài khoản..." } })
                                        @Html.ValidationMessageFor(model => model.UserAdmin, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="form-password">Password:</label>
                                    <div>
                                        @Html.EditorFor(model => model.PassAdmin, new { htmlAttributes = new { @class = "form-password form-control", @placeholder = "Nhập mật khẩu...", @type = "password" } })
                                        @Html.ValidationMessageFor(model => model.PassAdmin, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <button type="submit" class="btn">Đăng nhập </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
