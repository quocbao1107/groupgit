@using WebBanBanh.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SANPHAM>
<style type="text/css">
    #Datmua a {
        clear: both;
        background-color: red;
        color: white;
        width: 120px;
        height: 43px;
        display: block;
        text-align: center;
        padding-top: 10px;
        text-decoration: none;
        font-weight: bold;
        margin-top: -15px;
        margin-bottom: 5px;
        margin: auto;
    }

        #Datmua a:hover {
            background-color: dodgerblue;
            color: white;
        }
</style>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h3 style="Text-align:Center; font-weight:bold; color:black;margin-bottom:5px;;margin-top:5px;"> SẢN PHẨM MỚI NHẤT </h3>
<div class="row">
    @foreach (var item in ViewBag.spmn)
    {
        <div class="col-md-3" style="text-align:center">
            <a href="@Url.Action("ChitietSP", "Candy", new { id = item.MaSP })" title="">
                <img src="~/HinhSanPham/@item.AnhBia" alt="@item.TenSP" height="150" width="150" style="border: #222 solid 1px;" />
            </a>
            <a href="@Url.Action("ChitietSP", "Candy", new { id = item.MaSP })" title="@item.TenSP">
                <p style="margin:5px auto;text-align:center;color:black">@item.TenSP</p>
            </a>
            <p style="text-align:center;color:black">Giá: @String.Format("{0:#,##0}", item.GiaBan) VNĐ</p>
            <p id="Datmua">
                <a href="@Url.Action("ThemGioHang","GioHang",new {@iMaSP=@item.MaSP,@strURL=Request.Url.ToString()})" class="list-group-item">ĐẶT MUA</a>
            </p>
            @*<a href="@item.ThanhToanTrucTuyen"> <img src="http://www.baokim.vn/developers/uploads/baokim_btn/thanhtoan-l.png" /></a>*@
        </div>
    }
</div>
<hr />
<h3 style="Text-align:Center; font-weight:bold; color:red;margin-bottom:5px;;margin-top:5px;color:black"> DANH SÁCH SẢN PHẨM </h3>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3" style="text-align:center">
            <a href="@Url.Action("ChitietSP", "Candy", new { id = item.MaSP })" title="">
                <img src="~/HinhSanPham/@item.AnhBia" alt="@item.TenSP" height="150" width="150" style="border: #222 solid 1px;" />
            </a>
            <a href="#" title="@item.TenSP">
                <p style="margin:5px auto;text-align:center;color:black">@item.TenSP</p>
            </a>
            <p style="text-align:center;color:black">Giá: @String.Format("{0:#,##0}", item.GiaBan) VNĐ</p>
            <p id="Datmua">
                <a href="@Url.Action("ThemGioHang","GioHang",new {@iMaSP=@item.MaSP,@strURL=Request.Url.ToString()})" class="list-group-item">ĐẶT MUA</a>
            </p>
            @*<a href="@item.ThanhToanTrucTuyen"> <img src="http://www.baokim.vn/developers/uploads/baokim_btn/thanhtoan-l.png" /></a>*@

        </div>
    }
    <div class="MenuTrang" style="text-align:center ">
        @Html.PagedListPager(Model, page => Url.Action("index", new { page = page }))
    </div>
    <style>
        .MenuTrang li {
            display: inline;
        }
    </style>
</div>
